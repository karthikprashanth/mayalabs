$i = 1;

foreach ($this->eventList as $eList) {
    echo "<tr>";
    echo "<td>" . $i . "</td>";
    echo "<td>" . $eList['event_date'] . "</td>";
    echo "<td>" . $eList['timings'] . "</td>";
    echo "<td>" . $eList['description'] . "</td>";
    echo "</tr>";
    $i++;
}
echo "</tbody></table>";
