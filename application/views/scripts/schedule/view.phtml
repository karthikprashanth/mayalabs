if ($this->schCount == 0) {
    echo "<center>No schedule available</center>";

    if ($this->iscc) {
        echo "<center><form method = 'post' action = '/schedule/add?id=$this->id'><input type = 'submit' value = 'Add Schedule'></form></center>";
    }
    exit;
}

echo "<h3>Conference held from " . $this->eventDet['first_day'] . " to " . $this->eventDet['last_day'] . "</h3>";
$role = Zend_Registry::get('role');
if($role == 'sa')
{
	echo "<a href = '/schedule/edit?id=" . $this->id . "'>Edit Schedule</a>";
	echo "<a href = '/schedule/delete?id=" . $this->id . "'>Delete Schedule</a>";
	echo "<a href = '/schedule/add-event-list?id=" . $this->id . "&n=1'>Add a new event</a>";
}
